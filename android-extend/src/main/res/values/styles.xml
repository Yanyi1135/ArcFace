<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    
    <!-- Vertical seek bar -->
	<style name="VerticalSeekBar" parent="@android:style/Widget.SeekBar" >
	    <item name="android:progressDrawable" >@drawable/progress</item>
	    <item name="android:secondaryProgress">100</item>
	    <item name="android:thumb">@drawable/bg_seekbar_thumb</item>
	    <item name="android:paddingLeft">22dp</item>
	    <item name="android:paddingRight">22dp</item>
	</style>
	
	<!-- Custom CheckBox theme. -->
   	<style name="CustomCheckBox" parent="@android:style/Widget.CompoundButton.CheckBox">  
    	<item name="android:button">@drawable/checkbox</item> 
    	<item name="android:paddingLeft">24dp</item> 
    	<item name="android:textSize">14sp</item>
    	<item name="android:textColor">#555555</item>
	</style>
	
</resources>
